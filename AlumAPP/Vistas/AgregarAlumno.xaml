<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AlumAPP.Vistas.AgregarAlumno"
             Title="Agregar Alumno">

    <StackLayout Padding="10">
        <Entry x:Name="nombreEntry" Placeholder="Nombre" />
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="edadEntry" Placeholder="Edad" Keyboard="Numeric" />
        <Entry x:Name="cursoEntry" Placeholder="Curso" />
        <Switch x:Name="activoSwitch" />
        <Label Text="Activo" VerticalOptions="Center" />

        <Button Text="Agregar Alumno" Clicked="OnAgregarAlumnoButtonClicked" />
    </StackLayout>
</ContentPage>
